<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/detail_coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/detail_app_bar"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="15dp"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            >

            <com.uberlandia.financas.filipe.exemploomdb.SquareImageView
                android:id="@+id/img_filme"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_gravity="left"
                android:layout_margin="8dp" />



                <com.uberlandia.financas.filipe.exemploomdb.SquareImageView
                    android:id="@+id/metascore"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@+id/img_filme"
                    android:src="@drawable/metascore" />

                <TextView
                    android:id="@+id/metascore_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/metascore"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@+id/metascore"
                    android:textSize="15dp" />

                <com.uberlandia.financas.filipe.exemploomdb.SquareImageView
                    android:id="@+id/imsbRating"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/metascore_rating"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="25dp"
                    android:layout_toRightOf="@+id/img_filme"
                    android:src="@drawable/imbd" />

                <TextView
                    android:id="@+id/imdb_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imsbRating"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="25dp"
                    android:layout_toRightOf="@+id/imsbRating"
                    android:textSize="15dp"

                    />

                <com.uberlandia.financas.filipe.exemploomdb.SquareImageView
                    android:id="@+id/year"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imdb_rating"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="25dp"
                    android:layout_toRightOf="@+id/img_filme"
                    android:src="@drawable/ic_year" />

                <TextView
                    android:id="@+id/tv_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/year"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="25dp"
                    android:layout_toRightOf="@+id/year"
                    android:textSize="15dp" />

                <com.uberlandia.financas.filipe.exemploomdb.SquareImageView
                    android:id="@+id/duracao"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_year"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="25dp"
                    android:layout_toRightOf="@id/img_filme"
                    android:src="@drawable/duracao" />

                <TextView
                    android:id="@+id/tv_duracao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/duracao"
                    android:layout_margin="10dp"
                    android:layout_toRightOf="@+id/duracao"
                    android:textSize="15dp" />




        </RelativeLayout>

        <ProgressBar
            android:id="@+id/progress_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:visibility="gone" />

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:gravity="center"
            app:layout_collapseMode="pin"
            app:popupTheme="@style/AppTheme" />


    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardElevation="@dimen/spacing_medium"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:text="Plot"
                        android:textColor="@color/colorAccent"
                        android:textSize="25dp" />

                    <TextView
                        android:id="@+id/tv_descricao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:ellipsize="end"
                        android:maxLines="5"
                        android:paddingRight="@dimen/image_horizontal_margin"
                        android:text="dsadasdsa"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15dp"

                        />

                    <View
                        android:id="@+id/Divider1"
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/colorline" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:text="Director"
                        android:textColor="@color/colorAccent"
                        android:textSize="25dp" />

                    <TextView
                        android:id="@+id/tv_director"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:ellipsize="end"
                        android:maxLines="5"
                        android:paddingRight="@dimen/image_horizontal_margin"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15dp" />

                    <View
                        android:id="@+id/Divider2"
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/colorline" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:text="Actors"
                        android:textColor="@color/colorAccent"
                        android:textSize="25dp" />

                    <TextView
                        android:id="@+id/tv_actors"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:ellipsize="end"
                        android:maxLines="5"
                        android:paddingRight="@dimen/image_horizontal_margin"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15dp" />

                    <View
                        android:id="@+id/Divider3"
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/colorline" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:text="Rated"
                        android:textColor="@color/colorAccent"
                        android:textSize="25dp" />

                    <TextView
                        android:id="@+id/tv_rated"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:ellipsize="end"
                        android:maxLines="5"
                        android:paddingRight="@dimen/image_horizontal_margin"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15dp" />

                    <View
                        android:id="@+id/Divider4"
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/colorline" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:text="Released"
                        android:textColor="@color/colorAccent"
                        android:textSize="25dp" />

                    <TextView
                        android:id="@+id/tv_released"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:ellipsize="end"
                        android:maxLines="5"
                        android:paddingRight="@dimen/image_horizontal_margin"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15dp" />

                    <View
                        android:id="@+id/Divider5"
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/colorline" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:text="Writer"
                        android:textColor="@color/colorAccent"
                        android:textSize="25dp" />

                    <TextView
                        android:id="@+id/tv_writer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:ellipsize="end"
                        android:maxLines="5"
                        android:paddingRight="@dimen/image_horizontal_margin"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15dp" />

                    <View
                        android:id="@+id/Divider6"
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/colorline" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:text="Language"
                        android:textColor="@color/colorAccent"
                        android:textSize="25dp" />

                    <TextView
                        android:id="@+id/tv_language"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:ellipsize="end"
                        android:maxLines="5"
                        android:paddingRight="@dimen/image_horizontal_margin"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15dp" />

                    <View
                        android:id="@+id/Divider7"
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/colorline" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:text="Country"
                        android:textColor="@color/colorAccent"
                        android:textSize="25dp" />

                    <TextView
                        android:id="@+id/tv_country"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:ellipsize="end"
                        android:maxLines="5"
                        android:paddingRight="@dimen/image_horizontal_margin"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15dp" />

                    <View
                        android:id="@+id/Divider8"
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/colorline" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </FrameLayout>

    </ScrollView>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_collapseMode="pin"
        app:popupTheme="@style/AppTheme" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        style="@style/FabStyle"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:onClick="Salvar"
        android:src="@drawable/ic_save"
        android:visibility="gone"
        app:layout_anchor="@id/detail_app_bar"
        app:layout_anchorGravity="bottom|right|end" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabRemove"
        style="@style/FabStyle"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:onClick="Salvar"
        android:src="@drawable/ic_remove"
        android:visibility="gone"
        app:layout_anchor="@id/detail_app_bar"
        app:layout_anchorGravity="bottom|right|end" />

</android.support.design.widget.CoordinatorLayout>